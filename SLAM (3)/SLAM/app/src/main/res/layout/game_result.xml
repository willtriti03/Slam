<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result_bg"
    android:orientation="vertical"
    android:screenOrientation="landscape">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/update" />
        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hun_mill_site"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/clear_win" />

        <ImageView
            android:id="@+id/ten_mill_site"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/clear_win" />

        <ImageView
            android:id="@+id/mill_site"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/clear_win" />

        <ImageView
            android:id="@+id/hun_thou_site"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/clear_win" />

        <ImageView
            android:id="@+id/ten_thou_site"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/clear_win" />

        <ImageView
            android:id="@+id/thou_site"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/clear_win" />

        <ImageView
            android:id="@+id/han_site"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/clear_win" />

        <ImageView
            android:id="@+id/ten_site"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/clear_win" />

        <ImageView
            android:id="@+id/one_site"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/clear_win" />
    </LinearLayout>




</LinearLayout>
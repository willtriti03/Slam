<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:touchscreenBlocksFocus="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/background3"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:touchscreenBlocksFocus="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="12dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/combo" />

                    <ImageView
                        android:id="@+id/threeTenStatus"
                        android:layout_width="11dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/clear_win" />

                    <ImageView
                        android:id="@+id/threeOneStatus"
                        android:layout_width="11dp"
                        android:layout_height="13dp"

                        android:background="@drawable/score0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/life" />

                    <ImageView
                        android:id="@+id/threeLifeTxt"
                        android:layout_width="11dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/life_f" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="12dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="3dp"

                        android:background="@drawable/score" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:id="@+id/threeHunMill"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:background="@drawable/clear_win" />

                    <ImageView
                        android:id="@+id/threeTenMill"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:background="@drawable/clear_win" />

                    <ImageView
                        android:id="@+id/threeMill"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:background="@drawable/clear_win" />

                    <ImageView
                        android:id="@+id/threeHunThou"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:background="@drawable/clear_win" />

                    <ImageView
                        android:id="@+id/threeTenThou"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:background="@drawable/clear_win" />
                    <ImageView
                        android:id="@+id/threeThou"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:background="@drawable/clear_win" />
                    <ImageView
                        android:id="@+id/threeHun"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:background="@drawable/clear_win" />
                    <ImageView
                        android:id="@+id/threeTen"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:background="@drawable/clear_win" />
                    <ImageView
                        android:id="@+id/threeOne"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:background="@drawable/score0" />



                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="193dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="5.5dp"
                        android:background="@drawable/a" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/threeBtn_bg1"
                        android:layout_width="87.5dp"
                        android:layout_height="78dp"
                        android:layout_marginRight="0dp"

                        android:adjustViewBounds="true"
                        android:background="@drawable/l_win"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/threeBtn_bg2"
                        android:layout_width="87.5dp"
                        android:layout_height="78dp"
                        android:layout_marginRight="0dp"

                        android:adjustViewBounds="true"
                        android:background="@drawable/r_win"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/threeBtn1"
                        android:layout_width="87.5dp"
                        android:layout_height="78dp"
                        android:layout_marginRight="0dp"

                        android:adjustViewBounds="true"
                        android:background="@drawable/clear_win"
                        android:scaleType="fitXY" />


                    <Button
                        android:id="@+id/threeBtn2"
                        android:layout_width="87.5dp"
                        android:layout_height="78dp"
                        android:layout_marginLeft="0dp"

                        android:adjustViewBounds="true"
                        android:background="@drawable/clear_win"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="193dp"
                android:layout_height="96dp"
                android:layout_marginLeft="5.5dp"
                android:background="@drawable/a" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/threeBtn_bg3"
                    android:layout_width="87.5dp"
                    android:layout_height="78dp"
                    android:layout_marginRight="0dp"

                    android:adjustViewBounds="true"
                    android:background="@drawable/l_win"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/threeBtn_bg4"
                    android:layout_width="87.5dp"
                    android:layout_height="78dp"
                    android:layout_marginRight="0dp"

                    android:adjustViewBounds="true"
                    android:background="@drawable/r_win"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/countDown"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/clear_win"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/threeBtn3"
                    android:layout_width="87.5dp"
                    android:layout_height="78dp"
                    android:layout_marginRight="0dp"

                    android:adjustViewBounds="true"
                    android:background="@drawable/clear_win"
                    android:scaleType="fitXY" />

                <Button
                    android:id="@+id/threeBtn4"
                    android:layout_width="87.5dp"
                    android:layout_height="78dp"
                    android:layout_marginLeft="0dp"

                    android:adjustViewBounds="true"
                    android:background="@drawable/clear_win"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="193dp"
                android:layout_height="96dp"
                android:layout_marginLeft="5.5dp"
                android:background="@drawable/a" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/threeBtn_bg5"
                    android:layout_width="87.5dp"
                    android:layout_height="78dp"
                    android:layout_marginRight="0dp"

                    android:adjustViewBounds="true"
                    android:background="@drawable/l_win"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/threeBtn_bg6"
                    android:layout_width="87.5dp"
                    android:layout_height="78dp"
                    android:layout_marginRight="0dp"

                    android:adjustViewBounds="true"
                    android:background="@drawable/r_win"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/threeBtn5"
                    android:layout_width="87.5dp"
                    android:layout_height="78dp"
                    android:layout_marginRight="0dp"

                    android:adjustViewBounds="true"
                    android:background="@drawable/clear_win"
                    android:scaleType="fitXY" />

                <Button
                    android:id="@+id/threeBtn6"
                    android:layout_width="87.5dp"
                    android:layout_height="78dp"
                    android:layout_marginLeft="0dp"

                    android:adjustViewBounds="true"
                    android:background="@drawable/clear_win"
                    android:scaleType="fitXY" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
